{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@zotpress/build",
  "version": "1.0.0",
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "lib": ["ES2023", "DOM", "DOM.Iterable"]
  },
  "lint": {
    "include": ["scripts/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "no-await-in-loop",
        "no-const-assign",
        "no-eval",
        "no-external-import",
        "no-implicit-declare-namespace-export",
        "no-non-null-asserted-optional-chain",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-undef",
        "prefer-ascii",
        "single-var-declarator"
      ],
      "exclude": ["no-unused-vars", "no-console"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["scripts/"]
  },
  "test": {
    "include": ["scripts/**/*_test.ts", "tests/"]
  },
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-run scripts/build.ts",
    "build:css": "deno run --allow-read --allow-write scripts/build-css.ts",
    "build:js": "deno run --allow-read --allow-write --allow-net --allow-run scripts/build-js.ts",
    "build:res": "npx rescript build",
    "lint": "deno lint scripts/",
    "lint:php": "vendor/bin/phpcs --standard=WordPress lib/",
    "fmt": "deno fmt scripts/",
    "fmt:check": "deno fmt --check scripts/",
    "test": "deno test --allow-read --allow-write",
    "test:php": "vendor/bin/phpunit",
    "check": "deno check scripts/**/*.ts",
    "clean": "rm -rf dist/ .cache/ lib/bs/",
    "dev": "deno run --watch --allow-read --allow-write --allow-run scripts/build.ts",
    "ci": "deno task lint && deno task fmt:check && deno task check"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/testing": "jsr:@std/testing@^1.0.0",
    "@std/encoding": "jsr:@std/encoding@^1.0.0",
    "esbuild": "npm:esbuild@^0.24.0",
    "lightningcss": "npm:lightningcss@^1.28.0"
  },
  "exclude": [
    "node_modules/",
    "vendor/",
    "dist/",
    ".cache/",
    "lib/bs/",
    "src/rescript/*.res.js",
    "*.min.js",
    "*.min.css"
  ],
  "nodeModulesDir": "auto"
}
