{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@zotpress/build",
  "version": "0.1.0",
  "lint": {
    "include": ["scripts/"],
    "exclude": ["lib/", "src/rescript/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "no-await-in-loop",
        "no-const-assign",
        "no-eval",
        "no-self-compare",
        "no-sparse-arrays",
        "no-throw-literal"
      ],
      "exclude": ["no-unused-vars", "no-console", "explicit-function-return-type"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["scripts/"],
    "exclude": ["lib/", "src/rescript/", "vendor/", "node_modules/"]
  },
  "test": {
    "include": ["scripts/**/*_test.js", "tests/js/"]
  },
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-run scripts/build.js",
    "build:css": "deno run --allow-read --allow-write scripts/build-css.js",
    "build:js": "deno run --allow-read --allow-write --allow-run scripts/build-js.js",
    "build:rescript": "npx rescript build",
    "lint": "deno lint scripts/",
    "lint:php": "vendor/bin/phpcs --standard=WordPress lib/",
    "lint:rescript": "npx rescript format -check src/rescript/",
    "fmt": "deno fmt scripts/",
    "fmt:check": "deno fmt --check scripts/",
    "fmt:rescript": "npx rescript format src/rescript/",
    "test": "deno test --allow-read --allow-write",
    "test:php": "vendor/bin/phpunit",
    "clean": "rm -rf dist/ .cache/ lib/es6/",
    "dev": "deno run --watch --allow-read --allow-write --allow-run scripts/build.js",
    "ci": "deno task lint && deno task fmt:check && deno task test"
  },
  "imports": {
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0",
    "lightningcss": "npm:lightningcss@^1.28.0",
    "esbuild": "npm:esbuild@^0.24.0"
  },
  "exclude": [
    "node_modules/",
    "vendor/",
    "dist/",
    ".cache/",
    "lib/es6/",
    "*.min.js",
    "*.min.css",
    "*.res.js"
  ],
  "nodeModulesDir": "auto"
}
